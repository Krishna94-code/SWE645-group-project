node {

    stage('Checkout') { 
       checkout scm
       env.PATH = "${tool 'Ant'}/bin:${env.PATH}"
       bat 'ant -f build.xml'
    }
    

    stage('Build') { 
        echo "Building in progress...."
    }
    stage('Test') { 
        echo "Testing in progress...."
    }
    stage('Deploy') { 
        echo "Deployment in progress...."
    }
}
